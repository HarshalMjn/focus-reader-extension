{
  "manifest_version": 3,
  "name": "Focus Reader Extension",
  "version": "1.0",
  "description": "Enhance readability and summarize articles",
  "permissions": ["scripting", "activeTab"],
  "host_permissions": ["<all_urls>"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html"
  }
}
